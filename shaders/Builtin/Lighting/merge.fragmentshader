#version 330 core

// Interpolated values from the vertex shaders
in vec3 UV;

// Output data
out vec4 color;

uniform sampler2D texSampler;
uniform sampler2D texSampler1;

void main()
{
    vec4 srcColour = texture( texSampler, UV.xy );
    vec4 lightColour = texture( texSampler1, UV.xy );

	// color = vec4( srcColour.rgb * lightColour.rgb * lightColour.a, srcColour.a );
	color = vec4( srcColour.rgb, srcColour.a );
}