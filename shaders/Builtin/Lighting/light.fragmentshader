#version 330 core

// Interpolated values from the vertex shaders
in vec3 UV;

uniform vec3 light;

// Output data
out vec4 color;

void main()
{
    vec2 screenUV = vec2((UV.xy / UV.z) * 0.5f + 0.5f);
    const float attenuation = 2;
    float intensity = (pow(distance(light.xy, screenUV),-attenuation)) / 40;
    // float intensity = 1-distance(light.xy, UV);
	color = vec4(1,1,1,intensity);
}