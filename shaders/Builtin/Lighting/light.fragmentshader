#version 330 core

// Interpolated values from the vertex shaders
in vec2 UV;

uniform vec3 light;

// Output data
out vec4 color;

void main()
{
    const float attenuation = 2;
    float intensity = pow(distance(light.xy, UV),-attenuation) / 10;
    // float intensity = 1-distance(light.xy, UV);
	color = vec4(1,1,1,intensity);
}